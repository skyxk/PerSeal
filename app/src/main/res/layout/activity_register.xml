<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.clt.perseal.RegisterActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号："
        android:textColor="#e3e6e9"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintRight_toLeftOf="@+id/editphone"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/editphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="11"
        android:hint="请输入手机号"
        android:textColor="#e3e6e9"
        android:inputType="phone"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密 码："
        android:textColor="#e3e6e9"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/editpwd"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入密码"
        android:textColor="#e3e6e9"
        android:inputType="textPassword"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/editphone"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码："
        android:textColor="#e3e6e9"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/editrepwd"
        android:layout_marginRight="8dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/editrepwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入再次密码"
        android:textColor="#e3e6e9"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editpwd"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/regBtn"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:text="注册"
        android:textColor="#e3e6e9"
        android:background="#4db428"
        android:layout_marginRight="88dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editrepwd"
        app:layout_constraintVertical_bias="0.395"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.818" />

    <TextView
        android:id="@+id/texterror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="两次输入密码不一致"
        android:textColor="#da0707"
        android:textSize="12dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/editrepwd"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText" />
</android.support.constraint.ConstraintLayout>
